169. Majority Element

Input: nums = [2,2,1,1,1,2,2]
Output: 2

######################################## My Solution ######################################

class Solution {
public:
    int majorityElement(vector<int>& nums) {
        unordered_map<int,int> m;
        int x;
        for(int i = 0 ; i < nums.size() ; i++)              
            m[nums[i]]++;              
        for(auto& it: m) 
           if(it.second>(nums.size()/2))
             x = it.first;
    return x;
    }
};

